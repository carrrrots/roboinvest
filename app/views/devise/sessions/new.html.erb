<!-- LOGIN VIEW -->

<div class="login-container d-flex flex-column align-items-center">
  <div class="form-container d-flex flex-column align-items-center shadow mt-5 mb-0 fixed">
    <div>
      <h2 class='login-heading mt-5 mb-3'>Welcome Back !</h2>
    </div>
    <div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs d-flex flex-column">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions justify-content-center btn btn-outline-light btn-sm rounded-pill w-75 ml-4 mt-3">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
